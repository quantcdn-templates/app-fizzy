# Rails Environment
RAILS_ENV=development

# Secret key for session cookies and encrypted credentials
# Generate with: rails secret or openssl rand -hex 64
SECRET_KEY_BASE=your_secret_key_base_here

# Application Hostname Configuration
# CRITICAL: This controls URL generation and redirects
# Format: "domain.com" or "domain.com:port"
# 
# Local development: "localhost:3000"
# Production: "fizzy.yourdomain.com" (no port for standard 80/443)
APP_HOST=localhost:3000

# Force SSL/HTTPS (production only)
# RAILS_FORCE_SSL=true

# Database Configuration (provided automatically by Quant Cloud)
DB_HOST=localhost
DB_DATABASE=fizzy
DB_USERNAME=fizzy
DB_PASSWORD=fizzy

# SMTP Configuration for Magic Link Authentication
# Required for production. Local dev uses MailHog (see docker-compose.yml).
# Fizzy uses standard Rails ActionMailer SMTP environment variables

# SMTP server address
SMTP_ADDRESS=smtp.example.com

# SMTP port (usually 587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP HELO domain
SMTP_DOMAIN=yourdomain.com

# SMTP authentication username
SMTP_USER_NAME=your-username

# SMTP authentication password
SMTP_PASSWORD=your-password

# SMTP authentication type (plain, login, cram_md5)
SMTP_AUTHENTICATION=plain

# Enable STARTTLS
SMTP_ENABLE_STARTTLS_AUTO=true

# Optional: Rails Master Key (for encrypted credentials)
# RAILS_MASTER_KEY=your_master_key_here
